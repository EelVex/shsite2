- map:
body=$1; shift
for i in $@; do ( eval "set ${!i}"; eval "$body"); done
- rapply:
arg=${!#}
for i in $(seq $(($#-1))); do 
	body=${!i}; 
	( eval "set $arg"; eval "$body" ); 
done | sed "s/\(^\|$\)/'/g"
- if:
echo "%{!if: \"$1\" \"$2\" \"$3\"}%"
- if-set:
(eval "[[ ! -z $(echo \"$1\" | sed 's/%''{.*}''%//g' ) ]]") && echo "$2" || echo "$3"
