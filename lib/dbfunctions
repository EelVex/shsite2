- db-list-posts:
[[ -e "$1.db" ]] && db=$1.db
[[ -z "$db" ]] && db=$1
selector=$2
[[ -z "$selector" ]] && selector='*'
[[ ! -z "$3" ]] && where=" WHERE $3 "
sqlite3 $db "SELECT $selector FROM posts $where" | sed "s/|/' '/g;s/^/\"'/;s/$/'\"/"
- db-list-dates:
[[ -e "$1.db" ]] && db=$1.db
[[ -z "$db" ]] && db=$1
selector=$2
[[ -z "$selector" ]] && selector='*'
sqlite3 $db "SELECT $selector FROM posts GROUP BY created_timestamp" | sed "s/|/' '/g;s/^/\"'/;s/$/'\"/"
